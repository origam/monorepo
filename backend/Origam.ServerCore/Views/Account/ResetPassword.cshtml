@using Microsoft.AspNetCore.Mvc.Localization
@using Origam.ServerCore.Resources
@inject IHtmlLocalizer<SharedResources> SharedLocalizer
@model Origam.ServerCore.IdentityServerGui.Account.ResetPasswordViewModel

<div class="detailview-container">
    <div class="detailview-module with-title">
        <form asp-controller="Account" asp-action="ResetPassword" method="post" class="form-horizontal" role="form">
            <h2>@SharedLocalizer["ResetPasswordTitle"]</h2>
            <input asp-for="Code" type="hidden" />
            <div class="input-form">
                <div class="input-row">
                    <label asp-for="Email">@SharedLocalizer["Email"]</label>
                    <input asp-for="Email"/>
                </div>                
                <div class="input-row">
                    <label asp-for="Password">@SharedLocalizer["Password"]</label>
                    <input asp-for="Password"/>
                </div> 
                <div class="input-row">
                    <label asp-for="ConfirmPassword">@SharedLocalizer["ConfirmPassword"]</label>
                    <input asp-for="ConfirmPassword"/>
                </div>
                <div class="input-row">
                    <a class="btn normal-size primary submit-link" value="" href=#>@SharedLocalizer["Reset"]</a>                    
                </div>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationSummary"/>
